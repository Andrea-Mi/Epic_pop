<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_privacy_security"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_privacy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_back_privacy"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_media_previous"
            android:contentDescription="@string/cd_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/privacy_security_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#673AB7"
            android:gravity="center"
            android:layout_marginStart="8dp" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_privacy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header_privacy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tv_privacy_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacy_description"
                android:textSize="15sp"
                android:textColor="#616161"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="32dp" />

            <!-- Bot칩n Cambiar contrase침a -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_change_password_ps"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/change_password_button"
                android:textColor="#4A148C"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#FFFFFF"
                android:foreground="?attr/selectableItemBackground"
                app:cornerRadius="12dp"
                app:strokeColor="#9E9E9E"
                app:strokeWidth="1dp" />

            <!-- Bot칩n Recuperar contrase침a -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_recover_password_ps"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/recover_password_full"
                android:textColor="#4A148C"
                android:textSize="16sp"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:layout_marginBottom="32dp"
                android:backgroundTint="#EDE7F6"
                android:foreground="?attr/selectableItemBackground"
                app:cornerRadius="12dp"
                app:strokeColor="#D1C4E9"
                app:strokeWidth="1dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
