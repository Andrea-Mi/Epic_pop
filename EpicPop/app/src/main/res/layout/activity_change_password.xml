<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_change_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Header simplificado -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_cancel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="#673AB7"
            android:contentDescription="@string/action_cancel" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/change_password_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#673AB7"
            android:gravity="center"
            android:layout_marginStart="8dp" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <!-- Contenido principal -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_vertical">

            <!-- Icono de seguridad simplificado -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_lock_lock"
                app:tint="#673AB7"
                android:contentDescription="@string/change_password_title"
                android:layout_marginBottom="32dp" />

            <!-- Descripción -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/change_password_description"
                android:textSize="16sp"
                android:textColor="#616161"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="32dp" />

            <!-- Campo Contraseña actual (nuevo) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_current_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:endIconMode="password_toggle"
                app:endIconTint="#673AB7"
                app:boxStrokeColor="#673AB7"
                app:hintTextColor="#673AB7"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_current_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/current_password_hint"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:paddingVertical="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo Nueva contraseña -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:endIconMode="password_toggle"
                app:endIconTint="#673AB7"
                app:boxStrokeColor="#673AB7"
                app:hintTextColor="#673AB7"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/new_password_hint"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:paddingVertical="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Indicador de fortaleza de contraseña -->
            <LinearLayout
                android:id="@+id/password_strength_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <View
                    android:id="@+id/strength_bar_1"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="#E0E0E0" />

                <View
                    android:id="@+id/strength_bar_2"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="#E0E0E0" />

                <View
                    android:id="@+id/strength_bar_3"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:background="#E0E0E0" />

                <View
                    android:id="@+id/strength_bar_4"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:background="#E0E0E0" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_password_strength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/password_requirements"
                android:textSize="12sp"
                android:textColor="#9E9E9E"
                android:layout_marginBottom="24dp"
                android:visibility="gone" />

            <!-- Campo Confirmar contraseña -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:endIconMode="password_toggle"
                app:endIconTint="#673AB7"
                app:boxStrokeColor="#673AB7"
                app:hintTextColor="#673AB7"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/confirm_password_hint_new"
                    android:inputType="textPassword"
                    android:textSize="16sp"
                    android:paddingVertical="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Mensaje de error -->
            <TextView
                android:id="@+id/tv_error_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/passwords_dont_match"
                android:textSize="14sp"
                android:textColor="#F44336"
                android:layout_marginBottom="32dp"
                android:visibility="gone" />

            <!-- Botón Guardar nueva contraseña -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save_password"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/save_password_changes"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="#673AB7"
                android:enabled="false"
                app:cornerRadius="12dp"
                app:rippleColor="#FFFFFF33"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
