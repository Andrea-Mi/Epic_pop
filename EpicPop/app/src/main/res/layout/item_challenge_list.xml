<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header del reto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Icono de categoría -->
            <ImageView
                android:id="@+id/iv_challenge_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_sports"
                android:background="@drawable/circle_background"
                android:padding="8dp" />

            <!-- Título y categoría -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_challenge_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Correr 5 km"
                    android:textColor="@color/on_surface"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tv_challenge_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deportes"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Estado y dificultad -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/tv_challenge_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pendiente"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:background="@drawable/status_background"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tv_challenge_difficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medio"
                    android:textSize="11sp"
                    android:textColor="@color/gray_dark"
                    android:background="@drawable/difficulty_background"
                    android:padding="4dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Descripción del reto -->
        <TextView
            android:id="@+id/tv_challenge_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción del reto aquí..."
            android:textColor="@color/gray_dark"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="12dp" />

        <!-- Progreso -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Progreso:"
                android:textSize="12sp"
                android:textColor="@color/gray_dark"
                android:layout_marginEnd="8dp" />

            <ProgressBar
                android:id="@+id/progress_challenge"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:progress="65"
                android:max="100"
                android:progressDrawable="@drawable/progress_bar_style"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_challenge_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="65%"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/primary" />

        </LinearLayout>

        <!-- Fecha de creación -->
        <TextView
            android:id="@+id/tv_challenge_created_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Creado: 23/12/2024"
            android:textSize="11sp"
            android:textColor="@color/gray_dark"
            android:gravity="end" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
