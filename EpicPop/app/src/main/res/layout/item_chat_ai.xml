<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="start"
    android:padding="8dp">

    <!-- Avatar de IA -->
    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_creative"
        android:background="@drawable/circle_background"
        android:padding="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="60dp"
        android:maxWidth="280dp">

        <!-- Burbuja del mensaje de IA -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface">

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¡Hola! Claro que sí, estaré encantado de ayudarte a crear un nuevo reto personalizado. ¿Qué área te interesa más: deportes, estudio, salud?"
                android:textColor="@color/on_surface"
                android:textSize="14sp"
                android:padding="12dp"
                android:maxWidth="240dp" />

        </androidx.cardview.widget.CardView>

        <!-- Hora del mensaje -->
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:31"
            android:textSize="11sp"
            android:textColor="@color/gray_dark"
            android:layout_gravity="start"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>
