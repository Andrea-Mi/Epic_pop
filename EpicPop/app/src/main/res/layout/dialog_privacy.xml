<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/opt_privacy_security"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Mensaje principal -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/privacy_message"
        android:textColor="#424242"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="32dp" />

    <!-- Botón Recuperar contraseña mejorado -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_change_password"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/change_password_button"
        android:textColor="#4A148C"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#FFFFFF"
        android:foreground="?attr/selectableItemBackground"
        app:cornerRadius="12dp"
        app:strokeColor="#9E9E9E"
        app:strokeWidth="1dp"
        app:elevation="2dp"
        app:rippleColor="#EDE7F6"
        style="@style/Widget.Material3.Button.OutlinedButton" />

    <!-- Contenedor para botón OK alineado a la derecha -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ok_privacy"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="OK"
            android:textColor="#4A148C"
            android:textSize="14sp"
            android:minWidth="80dp"
            android:layout_gravity="end"
            android:backgroundTint="@android:color/transparent"
            app:cornerRadius="8dp"
            style="@style/Widget.Material3.Button.TextButton" />

    </LinearLayout>

</LinearLayout>
